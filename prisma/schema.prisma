generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model generetedReadme {
  id        String   @id @default(uuid())
  repoUrl   String
  createdAt DateTime @default(now())
}

model FileSession {
  id        String   @id @default(uuid())
  repoName  String
  createdAt DateTime @default(now())
  files     FileData[] @relation("SessionToFiles") 
}

model FileData {
  id           String   @id @default(uuid())
  sessionId    String
  path         String
  content      String
  fileSession  FileSession @relation("SessionToFiles", fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}
